                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:text="@string/size"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    android:textStyle="bold" />


                <TextView
