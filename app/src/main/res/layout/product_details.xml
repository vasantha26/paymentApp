                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/size"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rectangle_9"
                    android:gravity="center"
                    android:text="@string/s"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/m"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/size"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@+id/s"
                    android:background="@drawable/rectangle_9"
                    android:gravity="center"
                    android:text="@string/m"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/l"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/size"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@+id/m"
                    android:background="@drawable/rectangle_10"
                    android:gravity="center"
                    android:text="@string/l"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/xl"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/size"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@+id/l"
                    android:background="@drawable/rectangle_9"
                    android:gravity="center"
                    android:text="@string/xl"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/xxl"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/size"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@+id/xl"
                    android:background="@drawable/rectangle_9"
                    android:gravity="center"
                    android:text="@string/xll"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="24dp"
                    android:layout_toEndOf="@+id/xxl"
                    android:background="@drawable/color"
