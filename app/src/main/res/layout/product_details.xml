                    <!--                        android:background="@drawable/rectangle_12"-->
                    <!--                        android:gravity="center"-->
                    <!--                        android:textColor="@color/black"-->
                    <!--                        android:textSize="14sp" />-->

                </LinearLayout>


            </RelativeLayout>


            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangls"
                android:layout_marginStart="25dp"
                android:text="@string/description"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/get"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:text="@string/get_a_little_lift_from_these_sam_edelman_sandals_featuring_ruched_straps_and_leather_lace_up_ties_while_a_braided_jute_sole_makes_a_fresh_statement_for_summer"
                android:textColor="#666666"
                android:textSize="11sp">

            </TextView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/get"
                android:layout_marginTop="30dp">


                <LinearLayout
                    android:id="@+id/rectanglss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">


                    <TextView
